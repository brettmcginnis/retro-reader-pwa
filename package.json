{
  "name": "retro-reader-pwa",
  "version": "1.0.0",
  "description": "A PWA for reading and bookmarking retro game guides",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "jest --testMatch=\"**/*.test.ts\"",
    "test:watch": "jest --testMatch=\"**/*.test.ts\" --watch",
    "test:coverage": "jest --coverage",
    "test:ui": "jest --testMatch=\"**/*.test.tsx\"",
    "test:ui:watch": "jest --testMatch=\"**/*.test.tsx\" --watch"
  },
  "dependencies": {
    "idb": "^8.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@happy-dom/jest-environment": "^18.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitejs/plugin-react": "^4.5.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "happy-dom": "^18.0.1",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.0.2",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.17.0",
    "workbox-window": "^7.0.0"
  },
  "type": "module"
}
